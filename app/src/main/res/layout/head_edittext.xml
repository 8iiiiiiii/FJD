<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_title_edit"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_er_wei_ma"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/header_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/sao_kind" />

    <EditText
        android:id="@+id/header_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/header_er_wei_ma"
        android:ems="10"
        android:hint="请输入要搜索的商品"
        android:layout_toStartOf="@+id/header_search"
        android:background="@drawable/shape_edittext"
        android:drawableLeft="@drawable/search_icon2"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/header_er_wei_ma"
        android:layout_toLeftOf="@+id/header_search" />

    <ImageView
        android:id="@+id/header_search"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header_edit_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/root" />

</RelativeLayout>