<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homegoods"
    tools:context="com.example.com.zhaoshijie.view.HomeGoodsActivity">


    <include layout="@layout/head_back" />

    <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@+id/head_back"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/homegoods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/banner"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/homegoods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homegoods_now_price"
        android:layout_alignStart="@+id/homegoods_now_price"
        android:layout_below="@+id/home_goods_ms"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/homegoods_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homegoods_title"
        android:layout_alignStart="@+id/homegoods_title"
        android:layout_below="@+id/homegoods_price"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#f00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/home_goods_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homegoods_price"
        android:layout_alignStart="@+id/homegoods_price"
        android:layout_below="@+id/homegoods_title"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="#daa520"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homegoods_now_price"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homegoods_halo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/addshop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/msg_hei" />

        <ImageView
            android:id="@+id/homegoods_dianpu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/addshop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/dianpu" />


        <ImageView
            android:id="@+id/homegoods_shop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/addshop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/shopcar" />

        <Button
            android:id="@+id/goshop"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/homegoods_now_price"
            android:layout_marginLeft="25dp"
            android:background="#f00"
            android:text="立即购买"
            android:textColor="#fff" />

        <Button
            android:id="@+id/addshop"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/goshop"
            android:layout_toLeftOf="@+id/goshop"
            android:layout_toStartOf="@+id/goshop"
            android:background="#FFD700"
            android:text="加入购物车"
            android:textColor="#000" />


    </LinearLayout>

</RelativeLayout>
