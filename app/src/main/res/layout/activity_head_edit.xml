<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.zhaoshijie.view.HeadEditActivity">

    <include
        layout="@layout/head_edittext"
        android:id="@+id/include" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/head_label_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginTop="46dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:layout_marginTop="14dp"
        android:text="热门搜索"
        android:textSize="15sp"
        android:textColor="#f00"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/head_label_recy"
        android:layout_marginTop="11dp"
        android:text="历史记录"
        android:textSize="15sp"
        android:textColor="#f00"
        />

</RelativeLayout>
